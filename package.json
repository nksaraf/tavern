{
  "name": "tavern",
  "version": "0.2.3",
  "description": "WIP Super simple framework for service-based architecture in monolithic servers",
  "main": "tavern/index.js",
  "types": "tavern/index.d.ts",
  "files": [
    "tavern/**/*"
  ],
  "scripts": {
    "config": "cockpit",
    "build": "npm run clean && npm run compile",
    "test": "jest --collectCoverage --verbose",
    "deploy:local": "npm run build && npm link",
    "test:script": "ts-node test/script.ts",
    "type:check": "tsc --noEmit",
    "coverage": "open coverage/lcov-report/index.html",
    "test:min": "jest",
    "version": "npm run build && git add -A .",
    "postversion": "git push && git push --tags",
    "docs": "npx typedoc ./src && npm run docs:open",
    "docs:open": "open docs/index.html",
    "docs:clean": "rm -rf docs",
    "watch": "nodemon --exec npm run ",
    "clean": "rm -rf tavern && mkdir tavern",
    "compile": "tsc --declaration --outDir tavern"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nksaraf/tavern.git"
  },
  "bugs": {
    "url": "https://github.com/nksaraf/tavern/issues"
  },
  "homepage": "https://github.com/nksaraf/tavern#readme",
  "author": "Nikhil Saraf <nsaraf98@gmail.com>",
  "dependencies": {
    "chalk": "*",
    "lodash": "^4.17.11",
    "merge-descriptors": "^1.0.1",
    "multimatch": "^4.0.0",
    "parseurl": "^1.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.14",
    "@types/lodash": "^4.14.134",
    "@types/merge-descriptors": "^1.0.1",
    "@types/morgan": "^1.7.35",
    "@types/multimatch": "^2.1.3",
    "@types/node": "^12.0.7",
    "@types/parseurl": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "dependency-cruiser": "^4.23.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^22.6.4",
    "express": "^4.17.1",
    "http": "0.0.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "typescript": "^3.5.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "nodemonConfig": {
    "ext": "js,ts",
    "watch": [
      "src/**/*",
      "test/*"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageDirectory": "coverage"
  }
}