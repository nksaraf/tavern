{
  "name": "tavern",
  "version": "0.2.0",
  "description": "WIP Super simple framework for service-based architecture in monolithic servers",
  "main": "tavern/index.js",
  "types": "tavern/index.d.ts",
  "files": [
    "tavern/**/*"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run clean && npm run compile && npm run type:declare",
    "clean": "rm -rf tavern && rm -rf deps && mkdir tavern",
    "compile": "babel src --out-dir tavern --extensions .ts",
    "type:declare": "tsc --declaration --emitDeclarationOnly --outFile tavern/index",
    "deploy:local": "npm run clean && npm run build && npm link",
    "test:script": "NODE_ENV=test && babel-node --extensions '.js,.ts' test/script.ts -- ",
    "test:watch": "NODE_ENV=test nodemon --exec npm run test:local",
    "test": "jest --collectCoverage --verbose",
    "test:min": "jest",
    "test:local": "npm run compile && npm run test",
    "docs": "./deps/typedoc/bin/typedoc ./src",
    "docs:clean": "rm -rf docs",
    "docs:install": "rm -rf deps && git clone https://github.com/TypeStrong/typedoc.git deps/typedoc && cd deps/typedoc && npm install . && npm run build",
    "type:check": "tsc --noEmit",
    "type:watch": "NODE_ENV=test nodemon --exec npm run type:check",
    "version": "npm run build && git add -A .",
    "postversion": "git push && git push --tags",
    "test:cover": "open coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nksaraf/tavern.git"
  },
  "bugs": {
    "url": "https://github.com/nksaraf/tavern/issues"
  },
  "homepage": "https://github.com/nksaraf/tavern#readme",
  "author": "Nikhil Saraf <nsaraf98@gmail.com>",
  "nodemonConfig": {
    "ext": "js,ts",
    "watch": [
      "src/**/*",
      "test/*"
    ]
  },
  "dependencies": {
    "chalk": "*",
    "lodash": "^4.17.11",
    "merge-descriptors": "^1.0.1",
    "multimatch": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.14",
    "@types/lodash": "^4.14.134",
    "@types/merge-descriptors": "^1.0.1",
    "@types/morgan": "^1.7.35",
    "@types/multimatch": "^2.1.3",
    "@types/node": "^12.0.7",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^22.6.4",
    "http": "0.0.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "typescript": "^3.5.1"
  }
}
