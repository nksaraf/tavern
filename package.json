{
  "name": "tavern",
  "version": "0.1.1",
  "description": "WIP Super simple framework for service-based architecture in monolithic servers",
  "main": "tavern/index.js",
  "types": "tavern/index.d.ts",
  "files": [
    "tavern/**/*"
  ],
  "scripts": {
    "clean": "rm -rf tavern && mkdir tavern",
    "deploy:local": "npm run clean && npm run build && npm link",
    "compile": "babel src --out-dir tavern --extensions .ts",
    "build": "npm run clean && npm run compile && npm run type:declare",
    "test:script": "NODE_ENV=test && npm run build && babel-node --extensions '.js,.ts' test/test.js -- ",
    "postinstall": "npm run typedoc:install",
    "prepare": "npm run build",
    "test:watch": "NODE_ENV=test nodemon --exec npm run test:script",
    "_test": "nyc ava",
    "test": "npm run test:script",
    "docs:clean": "rm -rf docs",
    "docs": "./deps/typedoc/bin/typedoc ./src",
    "docs:install": "rm -rf deps && git clone https://github.com/TypeStrong/typedoc.git deps/typedoc && cd deps/typedoc && npm install . && npm run build",
    "type:check": "tsc --noEmit",
    "type:declare": "tsc --declaration --emitDeclarationOnly --outFile tavern/index",
    "postversion": "git push && git push --tags",
    "version": "npm run format && git add -A ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nksaraf/tavern.git"
  },
  "bugs": {
    "url": "https://github.com/nksaraf/tavern/issues"
  },
  "homepage": "https://github.com/nksaraf/tavern#readme",
  "author": "Nikhil Saraf <nsaraf98@gmail.com>",
  "ava": {
    "require": [
      "./test/_register.js"
    ],
    "files": [
      "test/*"
    ],
    "sources": [
      "src/**/*",
      "test/*"
    ],
    "watch": true
  },
  "nodemonConfig": {
    "ext": "js,ts"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "*",
    "express": "^4.17.1",
    "http": "0.0.0",
    "lodash": "^4.17.11",
    "merge-descriptors": "^1.0.1",
    "morgan": "^1.9.1",
    "multimatch": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/body-parser": "^1.17.0",
    "@types/colors": "^1.2.1",
    "@types/express": "^4.17.0",
    "@types/lodash": "^4.14.134",
    "@types/merge-descriptors": "^1.0.1",
    "@types/morgan": "^1.7.35",
    "@types/multimatch": "^2.1.3",
    "@types/node": "^12.0.7",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "ava": "^2.0.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.1.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "typescript": "^3.5.1"
  }
}
